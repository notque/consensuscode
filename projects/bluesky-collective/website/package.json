{
  "name": "consensus-code-collective-website",
  "version": "1.0.0",
  "description": "Website for the Consensus Code Collective - horizontal software development",
  "main": "index.js",
  "scripts": {
    "dev": "hugo server --buildDrafts --buildFuture",
    "build": "hugo --minify --gc",
    "preview": "hugo server --buildDrafts --buildFuture --bind 0.0.0.0",
    "clean": "rm -rf public resources",
    "test": "htmltest public",
    "lint": "markdownlint content/**/*.md",
    "format": "prettier --write assets/**/*.{js,css,scss}"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/consensus-code-collective/bluesky-collective.git"
  },
  "keywords": [
    "collective",
    "horizontal",
    "consensus",
    "software-development",
    "no-hierarchy",
    "anarchist",
    "cooperative"
  ],
  "author": "Consensus Code Collective",
  "license": "Apache-2.0",
  "homepage": "https://consensuscode.dev",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "htmltest": "^0.17.0",
    "markdownlint-cli": "^0.37.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "collective": {
    "governance": "horizontal",
    "hierarchy": 0,
    "decision_making": "consensus",
    "built_by": "collective-automation"
  }
}